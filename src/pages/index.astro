---
import BaseHead from '../components/utilities/BaseHead.astro';
import Header from '../components/layouts/Header.astro';
import Hero from '../components/layouts/home/Hero.astro';
import Footer from '../components/layouts/Footer.astro';
import LatestPosts from '../components/layouts/home/LatestPosts.astro';
import HeaderLink from '../components/utilities/HeaderLink.astro';
import Content from '../components/layouts/home/Content.astro';
import Testimonials from '../components/layouts/home/Testimonials.astro';
import Contact from '../components/layouts/home/Contact.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import MiniGuide from '../components/layouts/home/MiniGuide.astro';
import Wave from '../components/commons/Wave.astro';
---

<!doctype html>
<html lang="it">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<HeaderLink href="#main-content" class="sr-only focus:not-sr-only">
  			Salta al contenuto principale
		</HeaderLink>
		<Header />
		<main id="main-content">
			<Hero />
			<Wave class="-mb-px"/>
			<Content />
			<Wave position="top" class="-mt-px"/>
			<LatestPosts />
			<Wave class="-mb-px"/>
			<Testimonials />
			<Wave position="top" class="-mt-px"/>
			<MiniGuide />
			<Wave class="-mb-px"/>
			<section class="bg-[var(--color-primary)]">
				Ciao a tutti
			</section>
			<Wave position="top" class="-mt-px"/>
			<Contact />
		</main>
		<Footer />
	</body>
</html>

<script src="../scripts/main.js"></script>