---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../../styles/global.css';
import { BASE_PATH, SITE_TITLE } from '../../consts';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../../assets/logo.png';
import { getOrganizationStructuredData } from '../../utils/structuredData';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const completePath = `${Astro.site?.toString()}${BASE_PATH.slice(1)}/`;
const { title, description, image = FallbackImage } = Astro.props;
const siteUrl = completePath ?? 'http://localhost:4321';
const logoUrl = new URL(`${BASE_PATH}/favicon.png`, Astro.site).toString();
const orgName = SITE_TITLE;
const JSONstructuredData = getOrganizationStructuredData(orgName, siteUrl, logoUrl);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />

<!-- Favicon base -->
<link rel="icon" type="image/svg+xml" href=`${BASE_PATH}/favicon.svg` />
<link rel="icon" type="image/png" href=`${BASE_PATH}/favicon.png` sizes="32x32" />
<link rel="shortcut icon" href=`${BASE_PATH}/favicon.ico` />

<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="alternate" type="application/rss+xml" title={SITE_TITLE} href={new URL('rss.xml', Astro.site)} />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href=`${BASE_PATH}/fonts/Nunito-Regular.woff2` as="font" type="font/woff2" crossorigin />
<link rel="preload" href=`${BASE_PATH}/fonts/Nunito-Bold.woff2` as="font" type="font/woff2" crossorigin />
<link rel="preload" href=`${BASE_PATH}/fonts/Fredoka-Bold.woff2` as="font" type="font/woff2" crossorigin />
<link rel="preload" href=`${BASE_PATH}/fonts/MsMadi-Regular.woff2` as="font" type="font/woff2" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image.src, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image.src, Astro.url)} />

<!-- JSON-LD Logo -->
<script type="application/ld+json" set:html={JSONstructuredData} />