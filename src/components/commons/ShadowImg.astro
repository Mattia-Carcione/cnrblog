---
import { IMG_PLACEHOLDER } from '../../consts';

interface Props {
  src?: string;
  alt: string;
  class?: string;
  bgColor?: string;
  imgClass?: string;
  shadowOffsetTop?: string;
  shadowOffsetLeft?: string;
}

const { src, alt, class: wrapperClass = "", bgColor = "#e0e0e0", imgClass = "w-full max-w-md shadow-xl/30 object-cover relative z-10", shadowOffsetTop = "top-4", shadowOffsetLeft = "left-4" } = Astro.props;
---

<div class={`relative inline-block ${wrapperClass}`}>
  <!-- Ombra rettangolare animata -->
  <div class={`absolute ${shadowOffsetTop} ${shadowOffsetLeft} w-full h-full z-0 ${bgColor}`} aria-hidden="true">

  </div>

  <!-- Immagine vera sopra -->
  <img src={src ?? IMG_PLACEHOLDER} alt={alt} class={imgClass} loading="lazy" />
</div>