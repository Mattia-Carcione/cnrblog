---
const { idLeftCol, idRightCol, isColReverse = false, leftColClass, rightColClass } = Astro.props;
---

<div class=`max-w-7xl mx-auto flex lg:flex-row ${isColReverse ? 'flex-col-reverse' : 'flex-col'} items-center justify-between gap-12 px-6 py-14 sm:px-10 md:px-14 lg:px-18 xl:px-24 ${leftColClass}`>
  <!-- Left -->
  <div class=`w-full lg:w-1/2 flex flex-col gap-6 items-center sm:items-start text-center sm:text-left h-auto relative` data-aos="fade-right"  data-aos-easing="ease-in-back" id={idLeftCol}>
    <slot name="left" />
  </div>

  <!-- Right -->
  <div class=`w-full lg:w-1/2 flex flex-col justify-center items-center text-center sm:text-right sm:items-end lg:justify-end h-auto relative ${rightColClass ?? ''}` data-aos="fade-left" data-aos-easing="ease-in-back" id={idRightCol} >
    <slot name="right" />
  </div>
</div>
