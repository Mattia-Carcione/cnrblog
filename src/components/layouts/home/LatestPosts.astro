---
import { BASE_PATH } from "../../../consts";
import Polaroid from "../../commons/Polaroid.astro";
import SectionWrapper from "../../commons/SectionWrapper.astro";
import { getItemListStructuredData } from "../../../utils/structuredData";

import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3); // solo gli ultimi 3

const canonicalUrl = `${Astro.site?.toString()}${BASE_PATH.slice(1)}/`;
const siteUrl = canonicalUrl ?? 'http://localhost:4321';
const itemListSchema = getItemListStructuredData(
  posts.map((post, index) => ({
    name: post.data.title,
    url: `${siteUrl}blog/${post.id}/`,
    description: post.data.description,
  }))
);
---

<SectionWrapper sectionId="ultimi-post" sectionClass="py-16" sectionAriaLabelledby="latest-posts-heading" sectionRole="region" data-aos="fade-zoom-in" data-aos-easing="ease-in-back" data-aos-offset="200"  h2Class="sr-only" divAriaLabelledby="latest-posts" href={`${BASE_PATH}/blog/`} btnAriaLabel="Vai alla pagina Blog" h2="Ultimi commenti non richiesti" btnContent="Tutti i commenti non richiesti" divId="latest-posts" divClass="w-full flex flex-col justify-center items-center text-center">
  <h3 class="text-center text-(--color-primary)">Curioso? Leggi i commenti non richiesti</h3>
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 place-items-center">
      {posts.map((post, index) => {
        return (<a href={`${BASE_PATH}/blog/${post.id}/`} itemprop="mainEntityOfPage" class="relative rounded-md p-3 w-full w-full sm:max-w-sm lg:max-w-md transform hover:-rotate-1 hover:scale-105 transition duration-300 group text-black! polaroid-link" aria-label={`Vai all'articolo: ${post.data.title}`}>
          <Polaroid src={post.data.heroImage?.src} alt={post.data.heroImgAlt || post.data.title} aos={"fade-up"} caption={post.data.title} class={`relative bg-white p-3 w-full shadow-[1rem_1rem_1rem_-0.5rem_rgba(0,0,0,0.54)] my-3 lg:my-16 mx-auto text-right transition-all duration-300 ease-in-out hover:-top-4 hover:cursor-pointer`} isLast={index === 0} description={post.data.description} itemtype="http://schema.org/BlogPosting" itemtype="https://schema.org/BlogPosting" year={`${post.data.pubDate}`} />
          </a>
      )})}
    </div>
  </div>
</SectionWrapper>

<script type="application/ld+json" set:html={itemListSchema}/>